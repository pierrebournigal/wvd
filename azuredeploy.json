{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "Networking",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pierrebournigal/wvd/master/hub/nestedtemplates/networking.json",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "https://raw.githubusercontent.com/pierrebournigal/wvd/master/hub/nestedtemplates/networking.parameters.json",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "LogAnalytics",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pierrebournigal/wvd/master/hub/nestedtemplates/loganalytics.json",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "https://raw.githubusercontent.com/pierrebournigal/wvd/master/hub/nestedtemplates/loganalytics.parameters.json",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "Fslogix",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/pierrebournigal/wvd/master/wvd/nestedtemplates/fslogix.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    },
                    "subnet": {
                        "value": "[reference('Networking').outputs.srvSubnetId.value]"
                    },
                    "virtualNetworkId": {
                        "value": "[reference('Networking').outputs.virtualNetworkID.value]"
                    },
                    "location": {
                        "value": "francecentral"
                    },
                    "accountType": {
                        "value": "Premium_LRS"
                    },
                    "kind": {
                        "value": "FileStorage"
                    },
                    "minimumTlsVersion": {
                        "value": "TLS1_2"
                    },
                    "supportsHttpsTrafficOnly": {
                        "value": true
                    },
                    "allowBlobPublicAccess": {
                        "value": false
                    },
                    "networkAclsBypass": {
                        "value": "AzureServices"
                    },
                    "networkAclsDefaultAction": {
                        "value": "Allow"
                    },
                    "isShareSoftDeleteEnabled": {
                        "value": true
                    },
                    "shareSoftDeleteRetentionDays": {
                        "value": 7
                    },
                    "privateEndpointName": {
                        "value": "pvefslogix"
                    },
                    "privateLinkResource": {
                        "value": "[resourceId('Microsoft.Storage/storageAccounts',parameters('storageAccountName'))]"
                    },
                    "targetSubResource": {
                        "value": [
                            "file"
                        ]
                    },
                    "fileShareName": {
                        "value": "fslogix"
                    }
                }
            },
            "dependsOn": [
                "Networking"
            ]
        }
    ],
    "outputs": {}
}