{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "VNetSettings": {
      "type": "object"
    },
    "DNSServerAddress": {
      "type": "array",
      "defaultValue": [],
      "metadata": {
        "description": "The DNS address(es) of the DNS Server(s) used by the VNET"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "Location for all resources."
      }
    }
  },
  "functions": [],
  "variables": {
    "dhcpOptions": {
      "dnsServers": "[parameters('DNSServerAddress')]"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Network/virtualNetworks",
      "name": "[parameters('VNetSettings').name]",
      "apiVersion": "2020-05-01",
      "location": "[parameters('location')]",
      "properties": {
        "addressSpace": {
          "addressPrefixes": [
            "[parameters('VNetSettings').addressPrefixes[0].addressPrefix]"
          ]
        },
        "dhcpOptions": "[if(not(empty(parameters('DNSServerAddress'))), variables('dhcpOptions'), json('null'))]",
        "subnets": [
          {
            "name": "[parameters('VNetSettings').subnets[0].name]",
            "properties": {
              "addressPrefix": "[parameters('VNetSettings').subnets[0].addressPrefix]",
              "delegations": [],
              "privateEndpointNetworkPolicies": "Disabled",
              "privateLinkServiceNetworkPolicies": "Enabled"
            }
          },
          {
            "name": "[parameters('VNetSettings').subnets[1].name]",
            "properties": {
              "addressPrefix": "[parameters('VNetSettings').subnets[1].addressPrefix]"
            }
          },
          {
            "name": "[parameters('VNetSettings').subnets[2].name]",
            "properties": {
              "addressPrefix": "[parameters('VNetSettings').subnets[2].addressPrefix]"
            }
          },
          {
            "name": "[parameters('VNetSettings').subnets[3].name]",
            "properties": {
              "addressPrefix": "[parameters('VNetSettings').subnets[3].addressPrefix]"
            }
          }
        ]
      }
    }
  ],
  "outputs": {
    "srvSubnetId": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets',parameters('VNetSettings').name, parameters('VNetSettings').subnets['sub-hub-srv'].name)]"
    },
    "virtualNetworkID": {
      "type": "string",
      "value": "[resourceId('Microsoft.Network/virtualNetworks',parameters('VNetSettings').name)]"
    }
  }
}